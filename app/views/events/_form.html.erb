<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :date %>
    <%= form.datetime_select :date, id: :event_date %>
  </div>

  <div class="field">
    <%= form.label :venue_id %>
    <%= form.number_field :venue_id, id: :event_venue_id %>
  </div>

  <div class="field">
    <%= form.label :ticket_url %>
    <%= form.text_field :ticket_url, id: :event_ticket_url %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre, id: :event_genre %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, id: :event_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
